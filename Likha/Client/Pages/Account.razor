@page "/account"
@inject IUserService UserService
@inject ILocalStorageService LocalStorage
@inject IJSRuntime JsRuntime

<div class="container-fluid">
    <div class="row">
        <div class="dropdown-container d-block d-xl-none d-flex justify-content-around">
            <div class="dropdown">
                <button class="btn btn-md dropdown-toggle" type="button" id="AccountDropdown" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Manage My Account
                </button>
                <div class="dropdown-menu" aria-labelledby="AccountDropdown">
                    <a class="dropdown-item" href="/editprofile">Edit Profile</a>
                    <a class="dropdown-item" href="#">Edit Address</a>
                    <a class="dropdown-item" href="#">Orders</a>
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-md dropdown-toggle" type="button" id="GalleryDropdown" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Manage My Gallery
                </button>
                <div class="dropdown-menu" aria-labelledby="GalleryDropdown">
                    <a class="dropdown-item" href="#">Edit Profile</a>
                    <a class="dropdown-item" href="#">Edit Address</a>
                    <a class="dropdown-item" href="#">Orders</a>
                </div>
            </div>
        </div>
        <div class="manage-container d-none d-xl-block col-xl-3 d-flex flex-column align-items-center">
            <h3 class="manage-title">My Account</h3>
            <div class="manage-box d-flex flex-column align-items-center">
                <h5 class="manage-subtitle">Manage My Account</h5>
                <a href="/editprofile" class="manage-link">Edit Profile</a>
                <a href="" class="manage-link">Edit Address</a>
                <a href="" class="manage-link">Orders</a>
            </div>
            <h3 class="manage-title">My Gallery</h3>
            <div class="manage-box d-flex flex-column align-items-center">
                <h5 class="manage-subtitle">Manage My Gallery</h5>
                <a href="" class="manage-link">Edit Profile</a>
                <a href="" class="manage-link">Edit Address</a>
                <a href="" class="manage-link">Orders</a>
            </div>
        </div>
        <div class="col-xl-9">
            <div class="account-container-xl d-block d-xl-none">
                <div class="account-box-xl d-flex flex-column align-items-center">
                    <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=764&q=80"
                         alt="" class="account-image">
                    <h5 class="account-name-xl">Tamara Me</h5>
                    <div class="address-box-xl d-flex flex-column align-items-center">
                        <p class="address-content-xl">Ercuis, France, Europe</p>
                        <p class="address-content-xl">09501109163</p>
                    </div>
                </div>
            </div>
            <div class="body-container p-4 container-fluid d-none d-xl-block">
                <div class="account-container row">
                    <div class="account-box col-3 d-flex flex-column align-items-center">
                        <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=764&q=80"
                             alt="" class="account-image">
                        <h5 class="account-name">@user.FirstName @user.LastName</h5>
                    </div>
                    <div class="address-box col d-flex flex-column justify-content-center">
                        <h6 class="address-title">Address Book</h6>
                        <p class="address-content">@user.Email</p>
                        <p class="address-content">@user.FirstName @user.LastName</p>
                        <p class="address-content">@user.Phone</p>
                    </div>
                </div>
                <h3 class="recent-order">Recent Order</h3>
                <div class="order-box p-3 d-flex justify-content-center">
                    <table class="order-table">
                        <tr>
                            <th>Order Number</th>
                            <th>Date</th>
                            <th>Artwork</th>
                            <th>Artist</th>
                            <th>Total</th>
                        </tr>
                        <tr>
                            <td>123456</td>
                            <td>Jan 18, 2022</td>
                            <td><img src="https://picsum.photos/1000/300" alt="" class="art-img-order"></td>
                            <td>Vince Gogh</td>
                            <td>Php 12,000</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="body-container-xl d-block d-xl-none">
                <h3 class="recent-order">Recent Order</h3>
                <div class="order-box-xl d-flex">
                    <img src="https://picsum.photos/1000/300" alt="" class="art-img-order-xl">
                    <div class="art-body-xl d-flex flex-column justify-content-center">
                        <h4 class="art-title-xl">LoveBug</h4>
                        <p class="art-content-xl">12345</p>
                        <p class="art-content-xl">Mark Batinga</p>
                        <p class="art-content-xl">02/23/2022</p>
                    </div>
                    <h5 class="art-price-xl">Php 12,000</h5>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    User user = new User();

    protected override async Task OnParametersSetAsync()
    {
        var Username = await LocalStorage.GetItemAsStringAsync("username");
        user = await UserService.GetUser(Username);
        await JsRuntime.InvokeVoidAsync("console.log", user);
    }

}
